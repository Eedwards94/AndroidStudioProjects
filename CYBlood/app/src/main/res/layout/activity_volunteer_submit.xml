<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.cyblood.VolunteerSubmit"
    android:background="#FFD700">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#CC2233"
        android:textSize="25sp"
        android:id="@+id/volunteerName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#CC2233"
        android:textSize="25sp"
        android:id="@+id/volunteerEmail"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volunteersEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/volunteersName"
        android:layout_alignLeft="@+id/volunteersName"
        android:layout_alignStart="@+id/volunteersName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volunteersName"
        android:layout_alignBottom="@+id/Academics"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/volunteerName"
        android:layout_toEndOf="@+id/volunteerName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="25sp"
        android:id="@+id/finalSubmit2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#CC2233"
        android:id="@+id/volunteeringDate"
        android:textSize="25sp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/finalSubmit2"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="volunteerTime"
        android:textColor="#CC2233"
        android:id="@+id/volunteeringTime"
        android:textSize="25sp"
        android:layout_alignTop="@+id/volunteeringDate"
        android:layout_alignRight="@+id/volunteersEmail"
        android:layout_alignEnd="@+id/volunteersEmail" />

</RelativeLayout>
