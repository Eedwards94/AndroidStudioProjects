<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.cyblood.HowToGetInvolved"
    android:background="#FFD700">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Get Involved!!"
        android:id="@+id/GI"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#CC2233" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Committee applications go out in late August-early September for the Fall Blood Drive, and late October-early November for the Spring Blood Drive. Applications are posted on our website and social media pages, Facebook and Twitter during the application process."
        android:id="@+id/GetInvolved"
        android:textColor="#CC2233"
        android:layout_below="@+id/GI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
